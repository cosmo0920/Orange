.notice
  = notice

= link_to 'Add Book', new_book_path

= form_tag({action: :search},{ method: :get})
= label_tag :search_title
= text_field_tag :title
= submit_tag "search"

%table#booklist
  - @books.each do |book|
    %tr
      %td
        = link_to image_tag(book.image_url, alt: book.image_url), edit_book_path(book),
        alt: book.title,  class: "book_image"
      %td=book.title
      %td=link_to 'Edit', edit_book_path(book.id)
      %td=link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }

= paginate @books
